{
    "compilerOptions": {
       "outDir": "./dist",
       "rootDir": "./src",
       "lib": ["ESNext"],
       "target": "ES2022", 
       "moduleResolution": "node",
       "module": "commonjs",
       "strict": false,
       "sourceMap": true,
       "esModuleInterop": true,
       "declaration": true,
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "src/**/*.test.ts"]
}